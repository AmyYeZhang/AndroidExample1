<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:layout_marginTop="27dp"
    android:layout_marginBottom="27dp"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profiletext"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nametext"/>

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nameedit"
        android:nextFocusDown="@id/emailEdit2"
        android:nextFocusUp="@id/btnWeather"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emailtext2"/>

    <EditText
        android:id="@+id/emailEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/emailedit2"
        android:nextFocusDown="@id/picBtn"
        android:nextFocusUp="@id/nameEdit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pictext"/>

    <ImageButton
        android:id="@+id/picBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/picture_frame"
        android:nextFocusDown="@id/btnChat"
        android:nextFocusUp="@id/emailEdit2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pictext2"/>

    <Button
        android:id="@+id/btnChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnChat"
        android:nextFocusDown="@id/btnWeather"
        android:nextFocusUp="@id/picBtn"/>

    <Button
        android:id="@+id/btnWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnWeather"
        android:nextFocusDown="@id/nameEdit"
        android:nextFocusUp="@id/btnChat"/>

</LinearLayout>